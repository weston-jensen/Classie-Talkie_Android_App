<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1">
        <TextView
            android:text="Classie-Talkie"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:layout_marginLeft="120.0dp" />
    </LinearLayout>
    <Button
        android:text="Push To Talk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ptt_btn"
        android:layout_marginLeft="130.0dp"
        android:layout_marginTop="75.0dp"
        android:shadowColor="#ff008000" />
    <TextView
        android:text="..."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="342.0dp"
        android:layout_height="wrap_content"
        android:id="@+id/msgFeedback_lbl"
        android:layout_marginTop="75.0dp"
        android:layout_marginLeft="20.0dp" />
    <Button
        android:text="Leave LAN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/leaveLAN_btn"
        android:layout_marginTop="100.0dp"
        android:layout_marginLeft="250.0dp"
        android:shadowColor="#ffff0000" />
</LinearLayout>