<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:p1="http://schemas.android.com/apk/res/android"
    p1:orientation="vertical"
    p1:layout_width="match_parent"
    p1:layout_height="match_parent"
    p1:id="@+id/linearLayout1">
    <TextView
        p1:text="Connect To Server"
        p1:textAppearance="?android:attr/textAppearanceLarge"
        p1:layout_width="235.0dp"
        p1:layout_height="wrap_content"
        p1:id="@+id/textView1" />
    <TextView
        p1:text="Server IP:"
        p1:textAppearance="?android:attr/textAppearanceMedium"
        p1:layout_width="127.0dp"
        p1:layout_height="wrap_content"
        p1:id="@+id/textView2" />
    <EditText
        p1:layout_width="match_parent"
        p1:layout_height="wrap_content"
        p1:id="@+id/serverIP_tf"
        p1:inputType="text"
        p1:text="192.168.0." />
    <TextView
        p1:text="Server Port:"
        p1:textAppearance="?android:attr/textAppearanceMedium"
        p1:layout_width="match_parent"
        p1:layout_height="wrap_content"
        p1:id="@+id/textView3" />
    <EditText
        p1:layout_width="match_parent"
        p1:layout_height="wrap_content"
        p1:id="@+id/serverPort_tf"
        p1:text="12001" />
    <Button
        p1:text="Connect"
        p1:layout_width="183.0dp"
        p1:layout_height="wrap_content"
        p1:id="@+id/connectBtn" />
</LinearLayout>